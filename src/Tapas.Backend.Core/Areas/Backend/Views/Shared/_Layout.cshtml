<!doctype html>
<html class="no-js" lang="en" >
    <head>
        <meta charset="utf-8" >
        <meta content="ie=edge" http-equiv="x-ua-compatible" >
        <title>@Html.Raw( this.ViewBag.Title as string )</title>
        <meta content="width=device-width, initial-scale=1" name="viewport" >
        <link href="apple-touch-icon.png" rel="apple-touch-icon" >
        @await Component.InvokeAsync( "BackendStyleSheets" )
        @RenderSection( "Styles", required : false )
        <!-- Place favicon.ico in the root directory -->
    </head>
    <body>
        <div class="main-wrapper" >
            <div class="app" id="app" >
                <header class="header" >
                    <div class="d-lg-none d-xl-none header-block header-block-collapse" >
                        <button class="collapse-btn" id="sidebar-collapse-btn" >
                            <i class="fa fa-bars" ></i>
                        </button>
                    </div>
                </header>
                <aside class="sidebar" >
                    <div class="sidebar-container" >
                        @* <nav class="menu"> *@

                        @await Component.InvokeAsync( "Menu" )
                        @* </nav> *@
                    </div>
                    <footer class="sidebar-footer" >
                    </footer>
                </aside>
                <div class="sidebar-overlay" id="sidebar-overlay" ></div>
                <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle" ></div>
                <div class="mobile-menu-handle" ></div>
                @RenderBody()
                <footer class="footer" >
                </footer>
                <div class="fade modal" id="modal-media" >
                    <div class="modal-dialog modal-lg" >
                        <div class="modal-content" >
                            <div class="modal-header" >
                                <h4 class="modal-title" >Media Library</h4>
                                <button aria-label="Close" class="close" data-dismiss="modal" type="button" >
                                    <span aria-hidden="true" >&times;</span>
                                    <span class="sr-only" >Close</span>
                                </button>
                            </div>
                            <div class="modal-body modal-tab-container" >
                                <ul class="modal-tabs nav nav-tabs" role="tablist" >
                                    <li class="nav-item" >
                                        <a class="nav-link" data-toggle="tab" href="#gallery" role="tab" >Gallery</a>
                                    </li>
                                    <li class="nav-item" >
                                        <a class="active nav-link" data-toggle="tab" href="#upload" role="tab" >Upload</a>
                                    </li>
                                </ul>
                                <div class="modal-tab-content tab-content" >
                                    <div class="fade tab-pane" id="gallery" role="tabpanel" >
                                        <div class="images-container" >
                                            <div class="row" > </div>
                                        </div>
                                    </div>
                                    <div class="active fade in tab-pane" id="upload" role="tabpanel" >
                                        <div class="upload-container" >
                                            <div id="dropzone" >
                                                <form action="/" class="dropzone dz-clickable needsclick" enctype="multipart/form-data" id="demo-upload" method="POST" >
                                                    <div class="dz-message-block" >
                                                        <div class="dz-message needsclick" > Drop files here or click to upload. </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer" >
                                <button class="btn btn-secondary" data-dismiss="modal" type="button" >Close</button>
                                <button class="btn btn-primary" type="button" >Insert Selected</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
                <div class="fade modal" id="confirm-modal" >
                    <div class="modal-dialog" role="document" >
                        <div class="modal-content" >
                            <div class="modal-header" >
                                <h4 class="modal-title" >
                                    <i class="fa fa-warning" ></i> Alert
                                </h4>
                                <button aria-label="Close" class="close" data-dismiss="modal" type="button" >
                                    <span aria-hidden="true" >&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" >
                                <p>Are you sure want to do this?</p>
                            </div>
                            <div class="modal-footer" >
                                <button class="btn btn-primary" data-dismiss="modal" type="button" >Yes</button>
                                <button class="btn btn-secondary" data-dismiss="modal" type="button" >No</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
            </div>
        </div>
        <!-- Reference block for JS -->
        <div class="ref" id="ref" >
            <div class="color-primary" ></div>
            <div class="chart" >
                <div class="color-primary" ></div>
                <div class="color-secondary" ></div>
            </div>
        </div>
        @await Component.InvokeAsync( "BackendScripts" )
        @RenderSection( "Scripts", required : false )
    </body>
</html>