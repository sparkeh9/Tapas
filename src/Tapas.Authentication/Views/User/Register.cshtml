@using Tapas.Authentication.Models
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h3>Register</h3>

<form asp-controller="User" asp-action="Register" method="post">
    <div asp-validation-summary="All"></div>

    <input type="text" asp-for="UserName" placeholder="Username" /><br />
    <input type="password" asp-for="Password" placeholder="Password" /><br />
    <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" /><br />
    <input type="text" asp-for="Email" placeholder="Email" /><br />
    <input type="submit" value="Register" />
</form>